{
  "env": {
    "SKIP_PRE_PUSH_TESTS": "0"
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm install)",
      "Bash(npm ls:*)",
      "Bash(npm audit:*)",
      "Bash(npm outdated:*)",
      "Bash(npm test:*)",
      "Bash(npx vitest:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx stryker run:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rev-list:*)",
      "Bash(git show:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git worktree:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(gh issue:*)",
      "Bash(gh pr:*)",
      "Bash(gh label:*)",
      "Bash(gh project:*)",
      "Bash(gh api:*)",
      "Bash(gh repo view:*)",
      "Bash(python3 scripts/:*)",
      "Bash(node scripts/:*)",
      "Bash(mkdir:*)",
      "Bash(date)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "mcp__code-index-mcp__*",
      "WebSearch"
    ],
    "deny": [
      "Bash(npm run dev)",
      "Bash(rm -rf:*)",
      "Bash(npm publish:*)"
    ],
    "ask": [
      "SlashCommand(/accept-review)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(gh pr merge:*)",
      "Bash(rm lua-learning-website/reports/mutation/.stryker-incremental.json)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "code-index-mcp"
  ],
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
