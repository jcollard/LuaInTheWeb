{
  "name": "@lua-learning/electron-wrapper",
  "version": "0.0.1",
  "description": "Electron desktop wrapper for Adventures in Lua",
  "author": "Adventures in Lua",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac zip",
    "build:linux": "electron-builder --linux AppImage"
  },
  "keywords": [
    "lua",
    "electron",
    "desktop"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "28.3.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "app.adventuresinlua.desktop",
    "productName": "Adventures in Lua",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "npmRebuild": false,
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "zip",
      "icon": "icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    },
    "portable": {
      "artifactName": "AdventuresInLua-${version}-portable.exe"
    }
  }
}
